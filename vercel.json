{
  "crons": [
    {
      "path": "/api/cron/prewarm",
      "schedule": "0 10 */2 * *" 
    },
    {
      "path": "/api/cron/job-alerts",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "src/app/api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/blogs/auto-generate/route.js": {
      "maxDuration": 800,
      "memory": 2048
    }
  },
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600" }
      ]
    },
    {
      "source": "/(.*\\.mp4)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}

